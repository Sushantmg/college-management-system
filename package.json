{
  "name": "college-management-system",
  "version": "1.0.0",
  "description": "College Management System Backend using Node.js, TypeScript, Express, Prisma, and MongoDB",

  "type": "module",
  "main": "dist/server.js",

  "scripts": {
    "dev": "ts-node-dev --clear --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",

    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev"
  },

  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.1.13"
  },

  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",

    "prisma": "^6.19.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}

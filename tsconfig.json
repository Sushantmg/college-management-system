{
  "compilerOptions": {
    // Project structure
    "rootDir": "./src",           // Your source files
    "outDir": "./dist",           // Compiled JS output

    // Module settings for Node ESM
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "target": "es2022",           // Modern JS target for Node 18+
    "esModuleInterop": true,      // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true,

    // Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Declaration files
    "declaration": true,
    "declarationMap": true,

    // Source maps
    "sourceMap": true,

    // Module syntax
    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    // Node types
    "types": ["node"],

    // JSX (if you have frontend code in TSX)
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
